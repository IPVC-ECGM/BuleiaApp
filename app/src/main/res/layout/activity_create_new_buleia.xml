<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.HistoryActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/primary">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <Button
                    android:layout_width="35dp"
                    android:layout_height="40dp"
                    android:backgroundTint="@color/design_default_color_error"
                    android:onClick="button1"
                    app:icon="@drawable/ic_baseline_arrow_back_ios_24"/>

                <TextView
                    android:text="Create Ride"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ffffff"
                    style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"/>

            </LinearLayout>
        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>


        <EditText
            android:id="@+id/rideDay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/appBarLayout"
            android:hint="@string/rideDay"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:textAlignment="center">
        </EditText>

        <EditText
            android:id="@+id/rideTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rideDay"
            android:hint="@string/rideTime"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textAlignment="center">
        </EditText>

        <EditText
            android:id="@+id/driveFrom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rideTime"
            android:hint="@string/rideFrom"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textAlignment="center">
        </EditText>

        <EditText
            android:id="@+id/driveTo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/driveFrom"
            android:hint="@string/rideTo"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textAlignment="center">
        </EditText>

        <EditText
            android:id="@+id/pickUp_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/driveTo"
            android:hint="@string/pickup_01"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textAlignment="center">
        </EditText>

        <EditText
            android:id="@+id/pickUp_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/pickUp_1"
            android:hint="@string/pickup_02"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textAlignment="center">
        </EditText>

        <EditText
            android:id="@+id/pickUp_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/pickUp_2"
            android:hint="@string/pickup_03"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textAlignment="center">
        </EditText>

        <Button
            android:id="@+id/ButtonAdicionaBoleia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/pickUp_3"
            android:text="Criar Buleia"
            android:textColor="@color/primary_text"
            android:layout_centerInParent="true"
            android:backgroundTint="@color/accent">

        </Button>
    </RelativeLayout>