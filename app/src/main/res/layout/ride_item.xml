<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black"
    app:cardCornerRadius="20dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true"
    android:backgroundTint="@color/icons">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rowLineas"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/destinatioTo"
                android:text="Destination"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:padding="16dp"
                android:layout_weight="1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dateTo"
                android:text="Date"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:padding="16dp"
                android:layout_weight="1"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/expandableTo"
            android:visibility="visible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/timeTo"
                android:text="Time"
                android:textColor="@color/primary_text"
                android:textSize="18sp"
                android:padding="16dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/startTo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/timeTo"
                android:padding="16dp"
                android:text="Start At"
                android:textColor="@color/primary_text"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/endTo"
                android:text="End At"
                android:textColor="@color/primary_text"
                android:textSize="18sp"
                android:padding="16dp"
                android:textStyle="bold"
                android:layout_below="@+id/startTo"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/endTo"
                android:id="@+id/vizigolosTo"
                android:layout_margin="10dp"
                android:layout_centerHorizontal="true"
                android:textAlignment="center"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/vizigolo1"
                    android:text="NOME"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:layout_weight="1"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/vizigolo2"
                    android:text="NOME"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:layout_weight="1"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/vizigolo3"
                    android:text="NOME"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:layout_weight="1"/>
            </LinearLayout>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:backgroundTint="@color/black"
                android:id="@+id/reviewTo"
                android:text="Review"
                android:layout_marginTop="20sp"
                android:textColor="@color/primary_text"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_below="@+id/vizigolosTo"/>
        </RelativeLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>